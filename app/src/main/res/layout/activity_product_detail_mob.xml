<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PostAdvertismentTrendyMarket">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Product_Layout"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/slidebg">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:padding="10dip"
                app:centered="true"
                app:fillColor="#ff0099"
                app:pageColor="#FF0000"
                app:snap="false"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="22dp"
    android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="0.7"
                android:id="@+id/title_pr"
                android:textAllCaps="true"
                android:text="FURNITURE"
                android:textSize="15dp"
                android:textColor="@color/black"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2.8"
        android:layout_height="match_parent">
    <RadioButton
        android:layout_width="20dp"
        android:checked="false"
        android:layout_marginLeft="7dp"
        android:id="@+id/wishlist_pr"
        android:button="@drawable/rate_mob"
        android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Wishlist"
            android:textSize="10dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Craft Show"
                android:layout_marginLeft="22dp"
                android:id="@+id/cat_pr"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                   android:id="@+id/price_symblol"
                    android:layout_marginLeft="22dp"
                    android:text="$"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:id="@+id/price"
                android:layout_marginLeft="3dp"
                android:text=" 15$"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/location_pr"
                android:drawableLeft="@drawable/navmob20"
                android:text="  Location"
                android:layout_marginLeft="22dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  Date"
                android:layout_marginLeft="22dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/posteddate"
                android:textSize="15dp"
                android:drawableLeft="@drawable/addtimeperiod2"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="  Date"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="22dp"
                android:id="@+id/eventdate"
                android:textSize="15dp"
                android:drawableLeft="@drawable/addtimeperiod2"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/status"
                    android:layout_height="wrap_content"
                    android:text="Seller Offline"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:clickable="false"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ratingbar">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                      >
                    <RadioButton
                        android:layout_width="30dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/rateing1"
                        android:clickable="false"
                        android:enabled="false"
                        android:checked="false"
                        android:button="@drawable/rate_mob"
                        android:layout_height="30dp" />
                    <RadioButton
                        android:layout_width="30dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/rateing2"
                        android:clickable="false"
                        android:enabled="false"
                        android:checked="false"
                        android:button="@drawable/rate_mob"
                        android:layout_height="30dp" />
                    <RadioButton
                        android:layout_width="30dp"
                        android:clickable="false"
                        android:enabled="false"
                        android:checked="false"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/rateing3"
                        android:button="@drawable/rate_mob"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="30dp"
                        android:clickable="false"
                        android:enabled="false"
                        android:checked="false"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/rateing4"
                        android:button="@drawable/rate_mob"
                        android:layout_height="30dp" />
                    <RadioButton
                        android:layout_width="30dp"
                        android:clickable="false"
                        android:enabled="false"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/rateing5"
                        android:button="@drawable/rate_mob"
                        android:layout_height="30dp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/total_rating"
                        android:textSize="12dp"
                        android:layout_marginTop="4dp"
                        android:text="0 Rating"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp"
                    android:id="@+id/desctitle_pr"
                    android:text="BRIEF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="18dp"
                    android:id="@+id/desc_pr"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:text="@string/brief"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"

                    android:layout_marginTop="23dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="BUY NOW"
                        android:id="@+id/buynow"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:background="@color/green"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="VIEW MAP"
                        android:id="@+id/viewmap_pr"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:background="@color/green"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/contact_pr"
                        android:text="Contact"
                        android:layout_marginLeft="2dp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:background="@color/green"
                        android:layout_height="70dp"
                        />
                </LinearLayout>
            </LinearLayout>
       </LinearLayout>
    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/Rating_layout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/roundrectagle">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please Rate "
                        android:textSize="20dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/addtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAllCaps="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text=""
                        android:textColor="#000000"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap stars to rate"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:clickable="false"
                    android:stepSize="1"
                    android:rating="0"
                    />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#A4A4A5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/no_thanks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NO THANKS"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#A4A4A5" />
                <TextView
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RATE"
                    android:gravity="center"
                    android:textColor="#2285CD"
                    android:textSize="15dp"
                    android:background="#ffffff"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
