<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:visibility="gone"
       android:id="@+id/signUpLayout">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#ffffff"


           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:background="#ffffff"
               android:layout_weight="1"
               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:text="@string/create_account"
                   android:textStyle="bold"
                   android:textSize="35dp"
                   android:textColor="#ffffff"
                   android:paddingBottom="15dp"
                   android:gravity="bottom|center"
                   android:background="#ff0000"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingLeft="25dp"
                   android:paddingRight="25dp"
                   android:paddingTop="35dp"
                   >



                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <EditText
                               android:id="@+id/fname"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/first_last_name"
                               />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">


                           <EditText
                               android:id="@+id/email"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/emailid"
                               android:inputType="textEmailAddress"
                               />

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">


                           <EditText
                               android:id="@+id/psw"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/password"
                               android:inputType="textPassword"
                               />

                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">


                           <EditText
                               android:id="@+id/cnfrm"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/confirmpassword"
                               android:inputType="textPassword"
                               />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <EditText

                               android:id="@+id/phoneno"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/phone_number"
                               android:inputType="phone"
                               android:maxLength="10"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <EditText
                               android:id="@+id/street_address"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/street_address"
                               />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <EditText
                               android:id="@+id/city"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/city"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="70dp"
                               android:padding="10dp"
                               android:text="@string/state"
                               android:textSize="25dp"
                               android:textColor="#000000"
                               android:gravity="center"/>
                           <LinearLayout
                               android:layout_width="220dp"
                               android:layout_height="70dp"
                               android:background="@drawable/titlestyle1"
                               android:layout_marginLeft="15dp"
                               >
                               <Spinner
                                   android:id="@+id/state"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:entries="@array/spinner"
                                   >

                               </Spinner>

                           </LinearLayout>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:text="@string/zip"
                               android:layout_marginLeft="5dp"
                               android:textSize="25dp"
                               android:textColor="#000000"
                               android:gravity="center"/>
                           <EditText
                               android:id="@+id/zip"
                               android:layout_width="150dp"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:hint="@string/zip"
                               android:layout_marginLeft="5dp"
                               android:background="@drawable/titlestyle1"
                               android:inputType="number"
                               android:maxLength="5"
                               />




                       </LinearLayout>


                   </LinearLayout>

               </LinearLayout>

               <Button
                   android:id="@+id/crtaccount"
                   android:layout_width="300dp"
                   android:layout_height="70dp"
                   android:padding="15dp"
                   android:textSize="25dp"
                   android:background="#ff0000"
                   android:textColor="#ffffff"
                   android:text="@string/create_account"
                   android:layout_marginTop="90dp"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="20dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:gravity="center"
                       android:hint="@string/terms"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="5dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:gravity="center"
                       android:hint="@string/privacy"
                       />
               </LinearLayout>

           </LinearLayout>



       </ScrollView>

   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/OtpLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:gravity="bottom|center"
        >

        <ImageView
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:background="@drawable/logo"
            android:layout_marginBottom="100dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="@string/Congragulations"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:text="@string/created"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/emailhasbeen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/activation"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            >


            <EditText
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:layout_gravity="center"
                android:padding="20dp"
                android:textSize="20dp"
                android:hint="@string/entercode"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"


            >
            <ImageButton
                android:id="@+id/siginin_otp"
                android:background="@drawable/cntue"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textStyle="bold"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

</RelativeLayout>
