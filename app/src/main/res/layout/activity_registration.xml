<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:visibility="visible"
       android:id="@+id/signUpLayout">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#ffffff"


           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:background="#ffffff"
               android:layout_weight="1"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#00a05f"
                   android:orientation="horizontal">
                   <ImageButton
                       android:id="@+id/back"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:visibility="visible"
                       android:layout_marginLeft="10dp"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/backicon"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:text="@string/create_account"
                       android:textStyle="bold"
                       android:textSize="35dp"
                       android:layout_weight="1"
                       android:layout_marginRight="40dp"
                       android:textColor="#ffffff"
                       android:gravity="center_horizontal|center_vertical|center"
                       android:background="#00a05f"
                       />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingLeft="25dp"
                   android:paddingRight="25dp"
                   android:paddingTop="35dp"
                   >



                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       >


                           <EditText
                               android:id="@+id/fname"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:drawableLeft="@drawable/usericon30"
                               android:hint="@string/first_last_name"
                               />



                           <EditText
                               android:id="@+id/email"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"

                               android:drawableLeft="@drawable/mailicon30"
                               android:hint="@string/emailid"
                               android:inputType="textEmailAddress"
                               />


                           <EditText
                               android:id="@+id/psw"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:drawableLeft="@drawable/lock30"
                               android:hint="@string/password"
                               android:inputType="textPassword"
                               />


                           <EditText
                               android:id="@+id/cnfrm"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:drawableLeft="@drawable/lockicon30"
                               android:hint="@string/confirmpassword"
                               android:inputType="textPassword"
                               />
                       <EditText

                           android:id="@+id/phoneno_cell"
                           android:layout_width="match_parent"
                           android:layout_height="70dp"
                           android:padding="15dp"
                           android:drawableLeft="@drawable/phicon30"
                           android:hint="@string/home_number"
                           android:inputType="phone"
                           android:maxLength="10"
                           />

                           <EditText

                               android:id="@+id/phoneno"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:drawableLeft="@drawable/mobicon30"
                               android:hint="@string/phone_number"
                               android:inputType="phone"
                               android:maxLength="10"
                               />

                           <EditText
                               android:id="@+id/street_address"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:drawableLeft="@drawable/locationicon20"
                               android:hint="@string/street_address"
                               />

                           <EditText
                               android:id="@+id/city"
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:padding="15dp"
                               android:drawableLeft="@drawable/locationicon20"
                               android:hint="@string/city"
                               />
                       <Spinner
                           android:id="@+id/state"
                           android:layout_width="match_parent"
                           android:layout_height="70dp"
                           android:entries="@array/spinner"

                           android:paddingLeft="2dp"
                           >

                       </Spinner>
                       <EditText
                           android:id="@+id/zip"
                           android:layout_width="match_parent"
                           android:layout_height="70dp"

                           android:hint="@string/zip"
                           android:layout_marginLeft="5dp"
                           android:drawableLeft="@drawable/locationicon20"
                           android:inputType="number"
                           android:maxLength="5"
                           />




                   </LinearLayout>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:orientation="horizontal"
                   android:layout_marginTop="5dp">
                   <TextView
                       android:layout_width="wrap_content"

                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:gravity="center"
                       android:text="@string/terms"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:id="@+id/terms"

                       android:gravity="center"
                       android:textColor="@color/blue"
                       android:text="Terms and Privacy "
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:gravity="center"
                       android:text="Policies."
                       />
               </LinearLayout>

               <Button
                   android:id="@+id/crtaccount"
                   android:layout_width="300dp"
                   android:layout_height="70dp"
                   android:padding="15dp"
                   android:textSize="25dp"
                   android:background="#00a05f"
                   android:textColor="#ffffff"
                   android:text="@string/create_account"
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   />


           </LinearLayout>



       </ScrollView>

   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/OtpLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        >

        <ImageView
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:background="@drawable/logo"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="@string/Congragulations"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/created"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/emailhasbeen"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            >


            <EditText
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"

                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:layout_gravity="center"
                android:padding="20dp"
                android:textSize="20dp"
                android:hint="@string/entercode"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="90dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"


            >
            <ImageButton
                android:id="@+id/siginin_otp"
                android:background="@drawable/cntue"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textStyle="bold"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/congratulation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg"
                >

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="200dp"
                    android:background="@drawable/logo"
                    android:layout_gravity="center"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/continuebg"
                    android:layout_height="400dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:text="@string/Congragulations"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="@string/created"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"

                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="@string/beforeyou"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="90dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"


                    >
                    <ImageButton
                        android:id="@+id/continue_otp"
                        android:background="@drawable/cntue"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Copyright &#169; 2015, William Fuller. All Rights Reserved."/>
</RelativeLayout>
