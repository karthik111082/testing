<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:gravity="center|center_horizontal"
                android:textColor="@color/black"
                android:text="CHOOSE SALE CATEGORY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/craft"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/craftshow"
                    />
                <ImageButton
                    android:id="@+id/art"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"

                    android:background="@drawable/artshow"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:text="CRAFT SHOWS"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="15dp"
                    android:text="ART SHOWS"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/expo"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/expo"
                    />
                <ImageButton
                    android:id="@+id/fairs"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"

                    android:background="@drawable/fair_festivel"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:text="EXPO"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginRight="8dp"
                    android:textSize="15dp"
                    android:text="@string/fairs_festivels"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="OR"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/business_card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"

                    android:background="@drawable/business_card"
                    />
                <ImageButton
                    android:id="@+id/trendy"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"

                    android:background="@drawable/trendy_market"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:text="BUSINESS CARDS"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"

                    android:textSize="15dp"
                    android:text="TRENDY MARKET"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Copyright &#169; 2015, William Fuller. All Rights Reserved."/>

</RelativeLayout>
