<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hik.trendycraftshow.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="15dp"
                android:gravity="center|center_horizontal"
                android:textColor="@color/black"
                android:text="CHOOSE SALE CATEGORY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="10dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="60dp"

                    android:background="@drawable/craftshow"
                    />
                <ImageButton
                    android:layout_width="10dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="60dp"

                    android:background="@drawable/artshow"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="80dp"
                    android:text="CRAFT SHOW"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="80dp"
                    android:textSize="10dp"
                    android:text="ART SHOWS"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="120dp"

                    android:background="@drawable/expo"
                    />
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="120dp"

                    android:background="@drawable/fair_festivel"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="170dp"
                    android:text="EXPO"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:text="@string/fairs_festivels"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="OR"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="120dp"

                    android:background="@drawable/business_card"
                    />
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="120dp"

                    android:background="@drawable/trendy_market"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="120dp"
                    android:text="BUSINESS CARDS"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="60dp"
                    android:textSize="20dp"
                    android:text="TRENDY MARKET"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
