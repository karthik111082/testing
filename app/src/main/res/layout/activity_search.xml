<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="Keyword"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/keyword_c"
                android:layout_marginRight="20dp"
                android:background="@drawable/titlestyle1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="Street Address"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/sac"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/titlestyle1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="City"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/city_c"
                android:background="@drawable/titlestyle1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="Zip code"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/zipcode_c"
                android:background="@drawable/titlestyle1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="Within distance"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/roundrectagle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:text="0 miles"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/tx1_c"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:text="0 miles"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:text="100 miles"/>
                </LinearLayout>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/seek_c"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:thumb="@drawable/seekbarround"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="Event Date"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:layout_width="180dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/titlestyle1"
                android:layout_height="50dp"></EditText>
                <ImageButton
                    android:layout_width="50dp"
                    android:background="@drawable/calender"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:text="To"/>
                <EditText
                    android:layout_width="180dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/titlestyle1"
                    android:layout_height="50dp"></EditText>
                <ImageButton
                    android:layout_width="50dp"
                    android:background="@drawable/calender"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:id="@+id/search_c"
                android:textSize="20dp"
                android:background="@color/green"
                android:text="SEARCH NOW"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
